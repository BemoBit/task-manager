# Environment
NODE_ENV=development

# Application
PORT=3001
API_PREFIX=api

# Database
DATABASE_URL="postgresql://admin:password123@localhost:5432/taskmanager?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# AI Providers
# Encryption keys for secure API key storage (REQUIRED)
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
AI_ENCRYPTION_KEY=12345678901234567890123456789012
AI_ENCRYPTION_IV=1234567890123456

# AI Provider API Keys (Optional - can be configured via API)
# OpenAI: Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...your-openai-key

# Anthropic Claude: Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...your-anthropic-key

# Google AI (Gemini): Get from https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=...your-google-ai-key

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs
